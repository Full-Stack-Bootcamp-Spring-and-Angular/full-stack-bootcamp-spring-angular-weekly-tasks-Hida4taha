<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

<bean id="drawBean2D" class="Draw2D"></bean>
    <bean id ="drawBean3D" class="Draw3D"></bean>
    <bean id="myCircle " class="Circle">
        <constructor-arg ref="drawBean2D"/>
        <constructor-arg ref="drawBean3D"/>

    </bean>
    <bean id="myRectangle" class="Rectangle">
        <property name="Draw2D" ref="drawBean2D"/>
        <property name="Draw3D" ref="drawBean3D"/>
    </bean>

    <context:property-placeholder location="classpath:application.properties"/>
    <bean id="myDatabaseOperation" class="DatabaseOperations">
        <property name="url" value="${database.url}"/>
        <property name="username" value="${database.username}"/>
        <property name="password" value="${database.password}"/>
    </bean>
<bean id="myCar" class="vehicleExample.Car">
    <constructor-arg ref="myDatabaseOperation"/>
</bean>
    <bean id="myPlane" class="vehicleExample.Plane">
        <constructor-arg ref="myDatabaseOperation"/>
    </bean>

</beans>





